<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"	
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:paddingTop="1000dp">
    
    <TextView
            android:id="@+id/magic_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:gravity="right"
            android:textSize="70dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"	
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >

	    <Button
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:clickable="false"
	        android:textSize="30dp"
	        android:onClick="onClick"/>
	    <Button
	        android:id="@+id/btnCanc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Canc"
	        android:layout_weight="0"
	        android:textSize="30dp"
	        android:onClick="onClick"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"	
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	     >
	    <Button 
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="7"
	        android:textSize="50dp"
	        android:onClick="onClick"/>
            
        <Button 
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="8"
	        android:textSize="50dp"
	        android:onClick="onClick"/>
        
        <Button 
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="9"
	        android:textSize="50dp"
	        android:onClick="onClick"/>    
        <Button 
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="/"
	        android:textSize="50dp"
	        android:onClick="onClick"/>        
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"	
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	     >
	    
        <Button 
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="4"
	        android:textSize="50dp"
	        android:onClick="onClick"/>
        
        <Button 
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="5"
	        android:textSize="50dp"
	        android:onClick="onClick"/>
        <Button 
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="6"
	        android:textSize="50dp"
	        android:onClick="onClick"/>
        
        <Button 
            android:id="@+id/btnMolt"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="*"
	        android:textSize="50dp"
	        android:onClick="onClick"/>        
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"	
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	     >
	    
       <Button 
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="1"
	        android:textSize="50dp"
	        android:onClick="onClick"/>
        
        <Button 
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="2"
	        android:textSize="50dp"
	        android:onClick="onClick"/>
         <Button 
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="3"
	        android:textSize="50dp"
	        android:onClick="onClick"/>
        
        <Button 
            android:id="@+id/btnSub"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="-"
	        android:textSize="50dp"
	        android:onClick="onClick"/>        
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"	
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	     >
	    
        <Button 
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="."
	        android:textSize="50dp"
	        android:onClick="onClick"/>
        
        <Button 
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="0"
	        android:textSize="50dp"
	        android:onClick="onClick"/>
        <Button 
            android:id="@+id/btnEqu"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="="
	        android:textSize="50dp"
	        android:onClick="onClick"/>
        <Button 
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="+"
	        android:textSize="50dp"
	        android:onClick="onClick"/>        
        
    </LinearLayout>
    
    

</LinearLayout>
